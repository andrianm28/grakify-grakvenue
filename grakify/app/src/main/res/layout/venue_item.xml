<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/card_container"
    android:outlineSpotShadowColor="@color/cardview_light_background"
    android:outlineAmbientShadowColor="@color/cardview_shadow_start_color"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/cardview_light_background"
        android:id="@+id/parent_layout"

        >
        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/image_container"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/venue_image"
                />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/venue_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/image_container"
            android:text="Venue Name"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/venue_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/venue_name"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/image_container"
            android:text="Venue Location"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="14sp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>